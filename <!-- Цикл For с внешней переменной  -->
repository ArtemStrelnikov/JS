<!-- КОРОТКИЙ ВАРИАНТ

let i = 0;

for (; i < 3;) { 
  alert(i++);
  if (i<3) {
    alert("Рано... нажми ок")

  }
}

alert(i); 

if (i=3) {
  alert('Теперь ты хакер)')
}
